Algoritmo "Ex07"


Var
   numero, fatorial: inteiro
   i: inteiro

Inicio
   Escreva("Digite um número inteiro para calcular o fatorial: ")
   Leia(numero)

   fatorial <- 1

   Para i de 1 ate numero faca
      fatorial <- fatorial * i
   FimPara

   Escreva("O fatorial de ", numero, " é: ", fatorial)

FimAlgoritmo





